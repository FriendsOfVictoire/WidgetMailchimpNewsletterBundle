{% extends 'VictoireCoreBundle:Widget:show.html.twig' %}

{% block content %}

    <!-- Begin MailChimp Signup Form -->
    <div id="mc_embed_signup">
        <form action="//appventus.us5.list-manage.com/subscribe/post?u=133a2b8b0393aeb2b95ca0471&amp;id={{ listId }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">

                <div class="mc-field-group">
                    <label for="mce-EMAIL">{{ 'victoire_mailchimp_newsletter.show.signupForm.email.label'|trans({}, 'victoire') }}  <span class="asterisk">*</span>
                    </label>
                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                </div>
                {% if enableFirstName %}
                <div class="mc-field-group">
                    <label for="mce-FNAME">{{ 'victoire_mailchimp_newsletter.show.signupForm.firstName.label'|trans({}, 'victoire') }} </label>
                    <input type="text" value="" name="FNAME" class="" id="mce-FNAME">
                </div>
                {% endif %}
                {% if enableLastName %}
                <div class="mc-field-group">
                    <label for="mce-LNAME">{{ 'victoire_mailchimp_newsletter.show.signupForm.lastName.label'|trans({}, 'victoire') }} </label>
                    <input type="text" value="" name="LNAME" class="" id="mce-LNAME">
                </div>
                {% endif %}
                <div id="mce-responses" class="clear">
                    <div class="response" id="mce-error-response" style="display:none"></div>
                    <div class="response" id="mce-success-response" style="display:none"></div>
                </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;"><input type="text" name="b_133a2b8b0393aeb2b95ca0471_9d761b6bb5" tabindex="-1" value=""></div>
                <div class="clear">
                    <button class="btn btn-primary" id="mc-embedded-subscribe">
                        {% if icon != "" %}<i class="fa {{ icon }}"></i> {% endif %}
                        {{ buttonLabel }}
                    </button>
                </div>
            </div>
        </form>
    </div>
    <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
    <script type='text/javascript'>
        (function($) {
            window.fnames = new Array();
            window.ftypes = new Array();
            fnames[0]='EMAIL';
            ftypes[0]='email';
            {% if enableFirstName %}
            fnames[1]='FNAME';
            ftypes[1]='text';
            {% endif %}
            {% if enableLastName %}
            fnames[2]='LNAME';
            ftypes[2]='text';
            {% endif %}
            /*
             * Translated default messages for the $ validation plugin.
             * Locale: {{ app.request.locale }}
             */
            {% include "VictoireWidgetMailchimpNewsletterBundle:localization:messages_" ~ app.request.locale ~ ".js.twig" %}

        }(jQuery));
        var $mcj = jQuery.noConflict(true);
    </script>
<!--End mc_embed_signup-->



{% endblock content %}
